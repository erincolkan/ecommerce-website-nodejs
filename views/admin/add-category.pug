extends ../layout/main-layout.pug

block content
    form(action="/admin/add-category" method="POST")
        input(type="hidden" name="_csrf" value=`${csrfToken}`)
        
        .form-group.row
            label.col-sm-2.col-form-label(for="catgName") Name
            .col-sm-10
                input.form-control#catgName(type="text" name="name")
        
        .form-group.row
            label.col-sm-2.col-form-label(for="catgDescription") Description
            .col-sm-10
                textarea.form-control#catgDescription(type="text" name="description" cols="30" rows="10")

        .form-group.row
            .col-sm-10.offset-sm-2.my-2
                input.btn.btn-dark(type="submit" value="Add category")